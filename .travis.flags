#!/usr/bin/env bash

if [[ ${TRAVIS_OS_NAME} == "linux" ]]; then
	echo "This is linux"
	if [[ ${CXX} == "g++" ]]; then
		echo "Setting g++ to 4.9"
		export CXX="g++-4.9"
		export CC="gcc-4.9"
	elif [[ ${CXX} == "clang++" ]]; then
		echo "Setting clang++ to 3.5"
		export CXX="clang++-3.5"
		export CC="clang-3.5"
	fi
fi
